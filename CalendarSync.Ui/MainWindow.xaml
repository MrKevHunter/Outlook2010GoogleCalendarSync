<Window x:Class="CalendarSync.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Outlook Sync Settings" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0">Google Username:</Label>
        <TextBox Grid.Column="1" Grid.Row="0"></TextBox>
        
        <Label Grid.Column="0" Grid.Row="1">Google Password:</Label>
        <PasswordBox  Grid.Column="1" Grid.Row="1"></PasswordBox>
      
        <Label  Grid.Column="0" Grid.Row="2">Months History to Sync:</Label>
        <StackPanel  Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
        <Slider></Slider>
        <TextBox ></TextBox>
        </StackPanel>
        <Label  Grid.Column="0" Grid.Row="3">Future Months Detail to Sync::</Label>
        <Slider Grid.Column="1" Grid.Row="3"    Name="slider1"  />
    </Grid>
</Window>
